#include <iostream>
#include <algorithm> // for sort()
using namespace std;
// Function for Linear Search
int linearSearch(int arr[], int n, int key) {
 for (int i = 0; i < n; i++) {
 if (arr[i] == key)
 return i; // return index if found
 }
 return -1; // not found
}
// Function for Binary Search
int binarySearch(int arr[], int n, int key) {
 int low = 0, high = n - 1;
 while (low <= high) {
 int mid = (low + high) / 2;
 if (arr[mid] == key)
 return mid; // return index if found
 else if (arr[mid] < key)
 low = mid + 1;
 else
 high = mid - 1;
 }
 return -1; // not found
}
int main() {
 int customerIDs[] = {105, 102, 110, 120, 115, 108};
 int n = sizeof(customerIDs) / sizeof(customerIDs[0]);
 int key;
 cout << "Enter customer account ID to search: ";
 cin >> key;
 // Linear Search
 int linearIndex = linearSearch(customerIDs, n, key);
 if (linearIndex != -1)
 cout << "Linear Search: Account ID found at index " << linearIndex << endl;
 else
 cout << "Linear Search: Account ID not found." << endl;
 // Sort array before Binary Search
 sort(customerIDs, customerIDs + n);
 // Binary Search
 int binaryIndex = binarySearch(customerIDs, n, key);
 if (binaryIndex != -1)
 cout << "Binary Search: Account ID found at index " << binaryIndex << " (after sorting)" << endl;
 else
 cout << "Binary Search: Account ID not found." << endl;
 return 0;
}
