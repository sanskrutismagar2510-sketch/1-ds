#include <iostream>
#include <vector>
#include <queue>
using namespace std;

void shortestDeliveryTime(int n, vector<vector<pair<int,int>>> &graph, int start) {
    vector<int> time(n, 1e9);      // store shortest time to each node
    priority_queue<pair<int,int>, vector<pair<int,int>>, greater<pair<int,int>>> pq;

    time[start] = 0;
    pq.push({0, start});

    while(!pq.empty()) {
        int currTime = pq.top().first;
        int u = pq.top().second;
        pq.pop();

        for(auto edge : graph[u]) {
            int v = edge.first, w = edge.second;
            if(currTime + w < time[v]) {
                time[v] = currTime + w;
                pq.push({time[v], v});
            }
        }
    }

    cout << "Minimum delivery time to each location:\n";
    for(int i = 0; i < n; i++)
        cout << "Location " << i << ": " << time[i] << " mins\n";
}

int main() {
    int n = 5; // 5 locations
    vector<vector<pair<int,int>>> graph(n);
    // edges: (u -> v, time)
    graph[0] = {{1, 4}, {2, 2}};
    graph[1] = {{2, 5}, {3, 10}};
    graph[2] = {{3, 3}};
    graph[3] = {{4, 1}};

    shortestDeliveryTime(n, graph, 0); // start from pizza shop (node 0)
}
